{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "schedule": ["* * 1 * *"],
  "description": "Schedule monthly on the first day of the month",
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "groupName": "uv toolchain",
      "groupSlug": "uv",
      "matchPackageNames": [
        "uv",
        "uv_build",
        "astral-sh/uv"
      ]
    }
  ]
}
